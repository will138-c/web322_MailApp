<h1>Contact us From</h1>
<form method = "POST" action = "/contact-us">
    <label for = "firstName">First Name*</label>
    <input type = "text" id = "firstName" name="firstName" value="{{values.fistName}}"> <br>
    {{#if validation.firstName}}
    <span style="color: red;">{{ validation.firstName }}</span> <br/>
    {{/if}}

    <label for = "lastName">Last Name*</label>
    <input type = "text" id = "lastName" name="lastName" value="{{values.lastName}}"> <br>

    <label for = "email">Email*</label>
    <input type = "email" id = "email" name="email" value="{{values.email}}"> <br>  

    <label for = "message">Message</label>
    <textarea id = "message" name= "message" >"{{values.message}}"</textarea>   <br>

    <input type="submit" value="contact Us"/>

</form>